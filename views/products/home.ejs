<% layout('layouts/boilerplate') %>
<style>
  .filters {
    display: flex;
    position: relative; /* Important: parent should be relative */
    gap: 40px;
    margin-left: 20px;
    color: black;
    font-size: 1.6rem;
    margin-left: 6rem;
  }

  .filterHead {
    cursor: pointer;
    font-weight: bold;
    margin-top: 5px;
    font-size: 2rem;
    margin-right: 1rem;
    text-decoration: underline solid gold;
  }

  .filterHead:hover {
    text-decoration: underline solid rgb(216, 213, 213);
    color: rgb(216, 213, 213);
  }
  .filterBox div p:hover {
    text-decoration: underline solid rgb(216, 213, 213);
    color: rgb(216, 213, 213);
    cursor: pointer;
  }
  .filterBox div h5 {
    text-decoration: underline solid rgb(216, 213, 213);
    font-size: 1.9rem;
    font-weight: bold;
  }

  /* Hidden by default */
  #showWomenfilter,
  #showMenfilter {
    display: none;
    position: absolute;
    top: 100%; /* Show below the filterHead */
    left: 0;
    background-color: #f7f1f0;
    z-index: 100; /* Over products */
  }

  /* Filter Box Style */
  .filterBox {
    display: flex;
    border: 2px solid black;
    width: auto;
    gap: 40px;
    padding: 10px;
  }

  .banner {
    height: 500px;
    margin-left: -200px;
    width: 1700px;
  }
</style>
