<script>
  document.getElementById("filter1").addEventListener("mouseover", (e) => {
    document.getElementById("showMenfilter").style.display = "block";
  });
  filter1.addEventListener("mouseleave", () => {
    document.getElementById("showMenfilter").style.display = "none";
  });
  document.getElementById("filter2").addEventListener("mouseover", (e) => {
    document.getElementById("showWomenfilter").style.display = "block";
  });
  filter2.addEventListener("mouseleave", () => {
    document.getElementById("showWomenfilter").style.display = "none";
  });
  document.getElementById("showMenfilter").addEventListener("click", (e) => {
    let value = e.target.innerText.toLowerCase();
    let query = new URLSearchParams({ gender: "male", type: value }).toString();
    window.location.href = `/product?${query}`;
  });
  document.getElementById("showWomenfilter").addEventListener("click", (e) => {
    let value = e.target.innerText.toLowerCase();
    let query = new URLSearchParams({
      gender: "female",
      type: value,
    }).toString();
    window.location.href = `/product?${query}`;
  });
</script>
